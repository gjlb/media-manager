<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1"
         type="javafx.scene.layout.HBox"
         stylesheets="@../css/show_tile.css">

   <HBox styleClass="card" spacing="5">
       <ImageView fx:id="coverImage" fitWidth="80" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../blacksails.jpg" />
         </image>
       </ImageView>
       
       <VBox fx:id="details" spacing="5">
           <children>
               <Label fx:id="title" wrapText="true" prefWidth="125" maxHeight="32" text="Black Sails"/>
               <HBox spacing="5" >
                   <children>
                       <Label fx:id="year" styleClass="detail1" text="2014" />
                       <Label fx:id="network" styleClass="detail2" text="Starz!" />
                       <Label fx:id="duration" styleClass="detail3" text="55 min" />
                   </children>
               </HBox>
               <Button fx:id="addToLibrary" text="Add To Library" />
           </children>
       </VBox>
   </HBox>

</fx:root>